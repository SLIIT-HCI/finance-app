<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/userProfile"
        android:layout_width="137dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/avatar1" />

    <ImageView
        android:id="@+id/selectFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="136dp"
        app:srcCompat="@drawable/icon_camera2" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/editUserName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="44dp"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="199dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="286dp"
        android:layout_toEndOf="@+id/uPassword"
        android:text="@string/Change_Password"
        android:clickable="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/google"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="36dp"
        app:srcCompat="@drawable/google" />

    <TextView
        android:id="@+id/transactionReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="95dp"
        android:layout_toEndOf="@+id/report"
        android:text="@string/transaction_reports"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="143dp"
        android:layout_toEndOf="@+id/card"
        android:text="@string/card_details"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="132dp"
        app:srcCompat="@drawable/credit_card" />

    <ImageView
        android:id="@+id/report"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="86dp"
        app:srcCompat="@drawable/report" />

    <ImageView
        android:id="@+id/bankDetail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="182dp"
        app:srcCompat="@drawable/bank_details" />

    <TextView
        android:id="@+id/TVBankDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="190dp"
        android:layout_toEndOf="@+id/bankDetail"
        android:text="@string/bank_detail"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/mobile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="230dp"
        app:srcCompat="@drawable/phone_call" />

    <ImageView
        android:id="@+id/uPassword"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="278dp"
        app:srcCompat="@drawable/change_password3" />

    <ImageView
        android:id="@+id/userEmail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="324dp"
        app:srcCompat="@drawable/email2" />

    <TextView
        android:id="@+id/ChangeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="330dp"
        android:layout_toEndOf="@+id/userEmail"
        android:text="@string/Change_email"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/changeMobile"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="236dp"
        android:layout_toEndOf="@+id/mobile"
        android:text="@string/mobile"
        android:textStyle="bold" />


</RelativeLayout>