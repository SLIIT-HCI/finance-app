<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/userProfile"
        android:layout_width="137dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/avatar1" />

    <ImageView
        android:id="@+id/selectFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="136dp"
        app:srcCompat="@drawable/icon_camera2" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/editUserName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="44dp"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <TextView
        android:id="@+id/changeMobile"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_above="@+id/mobileLayout"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/mobile"
        android:text="@string/mobile"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/uPassword"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="354dp"
        app:srcCompat="@drawable/change_password3" />

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="199dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="369dp"
        android:layout_toEndOf="@+id/uPassword"
        android:clickable="true"
        android:text="@string/Change_Password"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mobile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="294dp"
        app:srcCompat="@drawable/phone_call" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bankDetail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="181dp"
        app:srcCompat="@drawable/bank_details" />

    <TextView
        android:id="@+id/TVBankDetail"
        android:layout_width="133dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="192dp"
        android:layout_toEndOf="@+id/bankDetail"
        android:text="@string/bank_detail"
        android:clickable="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="139dp"
        android:layout_toEndOf="@+id/card"
        android:text="@string/card_details"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/report"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="66dp"
        app:srcCompat="@drawable/report" />

    <TextView
        android:id="@+id/transactionReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="84dp"
        android:layout_toEndOf="@+id/report"
        android:text="@string/transaction_reports"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="31dp"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/google"
        app:srcCompat="@drawable/facebook" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/card"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="123dp"
        app:srcCompat="@drawable/credit_card" />

    <LinearLayout
        android:id="@+id/mobileLayout"
        android:layout_width="231dp"
        android:layout_height="62dp"
        android:layout_above="@+id/TVBankDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile 1" />

        <TextView
            android:id="@+id/mobile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile 2" />

        <TextView
            android:id="@+id/mobileHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Home" />
    </LinearLayout>


</RelativeLayout>